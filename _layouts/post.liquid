---
layout: base.liquid
---

{% if hero %}
<header class="hero">
  <img
    class="hero-img"
    src="{{ hero }}"
    alt="{{ heroAlt | default: 'Abstract image' }}"
    loading="eager"
    decoding="async"
  >
  <div class="hero-overlay"></div>

  <div class="hero-content">
    <h1 class="hero-title">{{ title }}</h1>
  </div>
</header>
{% else %}
<header class="post-head">
  <h1 class="post-title">{{ title }}</h1>
</header>
{% endif %}

<article class="post-body">
  {{ content }}
</article>